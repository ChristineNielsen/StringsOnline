<% include ../partials/header %>    

<link rel="stylesheet" href="/assets/css/kurv.css">

<main>

<div class="grid-container">
       <div class="kurv1">
              <h6>
                  <i class="fa fa-home" style="color: #00F9B6;"></i>    Forside \ Kurv
              </h6>
       </div>
       <a href="/orderhistorik"id="order"></a>  
       
       <div class="kurv2">
              <% include ../partials/sidenav %>  
       </div>
       <% if (cart.cartlines) { %>
       <div class="kurv3">
              <% cart.cartlines.forEach(function(item) {
                     %>
                          <div class="grid">
                              <div class="card1">
                             <img src="<%= item.image_fullpath %>" alt="<%= item.image_filename %>">
                              </div> 
                              <div class="card2">
                                  <h3><%= item.name %> </h3>
                             </div> 

                             <div class="card3">
                               <button id="left" onclick="updateCart('minus', '<%= item.product_id %>', '<%= item.quantity %>' )"> - </button>     
                                  <h5><%= item.quantity %></h5>
                                  <button id="right" onclick="updateCart('plus', '<%= item.product_id %>', '<%= item.quantity %>' )"> + </button> 

                              </div>
                              <div class="card4">
                                   <% if (item.offerprice !== '0.00') { %>
                                          <h4><span> Pris: DDK <%= item.offerprice %></span></h4>
                                          <% } %>
                                          <% if (item.offerprice == '0.00') { %>
                                             <h4><span> Pris: DDK <%= item.price %></span></h4>
                                             <% } %>
                             </div>
                             <div class="card5">
                                   <button type="button" onclick="deleteLine('<%= item.id %>')">X</button>
                              </div>
                          </div>
                     <% }); %>
       </div>
     
       <div class="kurv4">
       <a href="/kasse"> <button id="betaling">TIL KASSEN</button></a>
       <% } %>
      </div>
</div>

</main>

<script src="/assets/js/kurv.js"></script>

<% include ../partials/footer %>